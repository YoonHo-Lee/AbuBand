<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/babyList_itemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_babylist_item_boy_unselect"
        android:paddingTop="5dp"
        android:paddingLeft="5dp">

        <ImageView
            android:id="@+id/babyList_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/babyList_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/babyList_icon"
            android:layout_toRightOf="@+id/babyList_icon"
            android:text="안드로"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/babyList_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/babyList_icon"
            android:layout_toEndOf="@+id/babyList_icon"
            android:layout_toRightOf="@+id/babyList_icon"
            android:text="2015년 11월 5일생"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/babyList_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남아"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/babyList_birth"
            android:layout_toRightOf="@+id/babyList_birth"
            android:layout_toEndOf="@+id/babyList_birth" />
    </RelativeLayout>

</RelativeLayout>